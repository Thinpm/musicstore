
# API Configuration
VITE_API_URL=http://localhost:3001/api

# Development Configuration
VITE_USE_MOCK_DATA=true

# Authentication
VITE_AUTH_PROVIDER=custom  # custom, supabase, firebase, auth0, etc.

# Feature Flags
VITE_ENABLE_WAVEFORM=true
VITE_ENABLE_SHARING=true
VITE_ENABLE_NOTIFICATIONS=false

# Analytics
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Storage Settings
VITE_MAX_UPLOAD_SIZE=50000000  # 50MB in bytes
VITE_ALLOWED_AUDIO_FORMATS=mp3,wav,ogg,flac
VITE_ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
